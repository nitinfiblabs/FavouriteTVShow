<p id="notice"><%= notice %></p>

<h1>All Shows</h1>
<%= form_tag shows_path , :method => 'get' do %>
<%= text_field_tag :search, params[:search]%>
<%= submit_tag "Search Shows/Channels"%>
<% end %>

<table>
  <thead>
    <tr>
      <th>Channel Name</th>
      <th>Show Name</th>
      <th>Time</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
      <td><%=show.channel.name%></td>
      <td><%=show.name%></td>
      <td><%=show.timing.to_time.strftime("%m/%d/%Y %I:%M%p") %></td>
      <td><%=link_to 'Add to Favourites',favourites_path(show_id: show.id),method: :post%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Show', new_show_path %>
